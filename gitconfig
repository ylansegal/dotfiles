[user]
	name = Ylan Segal
	useConfigOnly = true
[core]
	excludesfile = ~/.gitignore
	editor = nano
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
  co = checkout
  st = status
  br = branch
  d = diff
  dc = diff --cached
  dw = diff --word-diff
  dcw = diff --cached --word-diff
  ds = stash show -p
  ai = add -p
  last-commit-hash = rev-parse HEAD
  uncommit=reset --soft 'HEAD^'
[push]
# Push current branch even if you've never pushed it before
default = current
[http]
	sslVerify = false
[branch]
	autosetuprebase = always
