#!/usr/bin/env bash
set -euo pipefail

source_path=/Users/ylansegal/Personal
sparse_bundle=Secure.sparsebundle

if [ -d /Volumes/Secure ] ; then
  >&2 echo "/Volume/Secure is mounted. Exiting..."
  exit 1
fi

rclone_cmd="rclone --verbose sync $source_path/$sparse_bundle drive:/$sparse_bundle/"
set -x
$rclone_cmd
