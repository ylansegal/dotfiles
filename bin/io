#!/usr/bin/env bash
# Prints stdin and executes in the given program, commenting the output.
# Example usage:

# $ echo "SELECT NOW()" | io psql procore_development
# SELECT NOW()
#
# --               now
# -- -------------------------------
# --  2019-02-05 12:43:19.756974-08
# -- (1 row)
# --
# -- Time: 0.737 ms

# $ echo "ls -1" | io sh
# ls -1
#
# # Brewfile
# # LICENSE.txt
# # README.md
# # asdfrc

set -euo pipefail

# Determine which comment pattern to use
case $1 in
  psql)
    comment='-- ' ;;
  *)
    comment='# ' ;;
esac

cat /dev/stdin <(echo) | tee >("$@" | sed "s/^/$comment/")
