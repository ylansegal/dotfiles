#!/usr/bin/env bash

enable_dns() {
  sudo networksetup -setdnsservers "Wi-Fi" 10.173.3.77 10.4.232.40 10.48.130.100
}

disable_dns() {
  sudo networksetup -setdnsservers "Wi-Fi" empty
}

command=$1
case "${command}" in
enable)
  enable_dns
  ;;
disable)
  disable_dns
  ;;
*)
  echo "Usage:  $0 {enable|disable}"
  echo ""
  echo "COMMANDS:"
  echo "  enable    Set DNS entries for mellmo.lan infra"
  echo "  disable   Remove DNS entries for mellmo.lan infra"
  echo ""
esac
