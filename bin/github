#!/usr/bin/env bash
# Opens GitHub on the current's branch PR

# Unofficial strict mode:
set -euo pipefail
IFS=$'\n\t'

current_branch=$(git branch | grep '*' | awk '{print $2}')
pr_url=$(hub pr list --format %U --head $current_branch --limit 1 | xargs echo)

if [ -z "$pr_url" ]
then
  echo "PR not found"
else
  set -x
  open $pr_url
fi
