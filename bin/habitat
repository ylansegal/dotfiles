#!/usr/bin/env bash
# Export environment variables in .env (or provided file)

envfile="${1:-.env}"
if [[ -f $envfile ]]; then
  echo "### Setting up environment variables from $envfile"
  \cat $envfile | grep -v '#' | grep -v '^$' | grep -v 'PATH'| while read line; do
    echo $line
    export $line
  done
fi
